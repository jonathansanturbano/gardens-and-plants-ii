<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h1>Add a tag for <%= @plant.name %></h1>
      <%= simple_form_for [@plant, @plant_tag] do |f| %>
        <%= f.association :tag, include_blank: false, input_html: { multiple: true, data: { controller: "select-2" } }, include_hidden: false %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
